<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mediasoftindonesia.taniapps.CustomListViewBerandaPetani">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:scaleType="fitXY"
        android:src="@drawable/bgcopy"
        android:id="@+id/imageView10" />

    <TextView
        android:id="@+id/tglUpload"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:text="TextView"
        android:textColor="#ababab"
        android:textSize="10sp" />

    <View
        android:id="@+id/view"
        android:layout_width="1.5dp"
        android:layout_height="100.5dp"
        android:layout_toEndOf="@+id/tglUpload"
        android:layout_toRightOf="@+id/tglUpload"
        android:background="#c7c7c7"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/textViewJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="98dp"
        android:text="TextView"
        android:textColor="#334f33"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewDeskripsi"
        android:layout_width="150dp"
        android:layout_height="63dp"
        android:layout_below="@+id/textViewJudul"
        android:layout_marginLeft="99dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/gambarProduk"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tglUpload"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp" />

</RelativeLayout>
