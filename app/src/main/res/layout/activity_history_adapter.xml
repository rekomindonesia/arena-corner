<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true"
    tools:context=".adapter.HistoryAdapter">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/image_view_histori"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/information"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/image_view_histori"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/text_view_histori_booking_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12-12-19"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_view_histori_name_store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service Leptop"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/text_view_histori_catatan_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xPoint Store"
                android:textColor="@color/black"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/text_view_histori_status_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking"
                android:textColor="@color/red"
                android:textSize="12sp"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>